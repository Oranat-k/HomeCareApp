<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlannerListActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="วันนี้"
        android:gravity="center"
        android:textSize="28dp"/>

    <Button
        android:id="@+id/btnAddPlanner"
        android:background="@drawable/border_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/colorButton"
        android:onClick="onClickaddPlanner"
        android:text="สร้างแผนการดูแล"
        android:textColor="@color/colorTextWrite" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="เช้า"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />



            <ListView
                android:id="@+id/MorningPlanner"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:divider="@null"
                android:dividerHeight="10.0sp"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="กลางวัน"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />


            <ListView
                android:id="@+id/AfternoonPlanner"
                android:layout_width="match_parent"
                android:layout_height="364dp"
                android:divider="@null"
                android:dividerHeight="10.0sp"
                android:padding="10dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="เย็น"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />


            <ListView
                android:id="@+id/EveningPlanner"
                android:layout_width="match_parent"
                android:layout_height="364dp"
                android:divider="@null"
                android:dividerHeight="10.0sp"
                android:padding="10dp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="ก่อนนอน"
                android:textColor="@color/colorTextDark"
                android:textSize="20dp" />


            <ListView
                android:id="@+id/BeforBedPlanner"
                android:layout_width="match_parent"
                android:layout_height="364dp"
                android:divider="@null"
                android:dividerHeight="10.0sp"
                android:padding="10dp" />


        </LinearLayout>


    </ScrollView>





</LinearLayout>