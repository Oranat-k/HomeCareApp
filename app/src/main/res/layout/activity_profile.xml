<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <Button
                android:background="@drawable/border_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorButton"
                android:onClick="onClickPlanner"
                android:text="แผนการดูแล"
                android:textColor="@color/colorTextWrite" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homepageM"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:src="@drawable/homepage_m"
            android:background="@null"
            android:onClick="onClickButtonMenu"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/chartM"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:src="@drawable/chart_m"
            android:background="@null"
            android:onClick="onClickButtonMenu"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/plannerM"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/planner_m"
            android:background="@null"
            android:onClick="onClickButtonMenu"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/notiM"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:src="@drawable/noti_m"
            android:background="@null"
            android:onClick="onClickButtonMenu"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/profileM"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:src="@drawable/profile_m"
            android:background="@null"
            android:onClick="onClickButtonMenu"
            android:layout_weight="1" />
    </LinearLayout>


    <!--<android.support.design.widget.BottomNavigationView-->
        <!--android:id="@+id/bottom_nav_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="?android:attr/windowBackground"-->
        <!--app:menu="@menu/bottom_nav" />-->


</RelativeLayout>
