<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/border"
    android:layout_margin="10dp"
    android:background="@drawable/border_none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/titlePr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Title"
            android:textSize="20dp"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/subtitlePr"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="detail"/>

            <TextView
                android:id="@+id/suggest"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:background="@drawable/btnn"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorTextWrite"
                android:text="คำเเนะนำ"
                android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_marginTop="7dp"
                android:id="@+id/imagePessure"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
