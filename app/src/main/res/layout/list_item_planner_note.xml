<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/border"
    android:layout_margin="10dp"
    android:background="@drawable/border_wirte">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/camera3"
            android:layout_marginTop="18dp"
            android:id="@+id/imagePessure"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titlePr"
            android:fontFamily="@font/sukhumvitset_medium"
            android:textColor="@color/colorTextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Title"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/subtitlePr"
            android:fontFamily="@font/sukhumvitset_medium"
            android:textColor="@color/colorButton"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail"/>

        </RelativeLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/suggest"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:background="@drawable/btnn"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorTextWrite"
                android:text="คำเเนะนำ"
                android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageButton
                android:id="@+id/edit"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/more"
                android:scaleType="fitXY"
                android:background="@null"
                android:buttonTint="@color/colorActive"/>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
